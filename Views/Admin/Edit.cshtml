@{
}
<h1>Edit Blog</h1>
<form method="post" style="width:70%" enctype="multipart/form-data">

    <input asp-for="Id" class="form-control mt-3" hidden />
    <div class="mt-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control mt-3" />
    </div>
    <div class="mt-3">
        <label asp-for="AuthorId">Author</label>
        @if (Model.IsAdmin)
        {
            <select asp-for="AuthorId" class="form-control mt-3" asp-items="@(new SelectList(Model.Authors, "Id", "UserName"))">
                <option value="">Select an Author</option>
            </select>
        }
        else
        {
            <input type="text" class="form-control mt-3" value="@Model.CurrentUsername" disabled />
            <input type="hidden" asp-for="AuthorId" value="@Model.AuthorId" />
        }
    </div>
    <div class="mt-3">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control mt-3"></textarea>
    </div>
    <div class="mt-3">
        <label asp-for="Image"></label>
        <input type="file" asp-for="Image" class="form-control mt-3" accept="image/*" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary mt-3">Update</button>
        <a asp-controller="Admin" asp-action="List" class="btn btn-secondary mt-3 ml-4"> Back to List</a>
    </div>
</form>